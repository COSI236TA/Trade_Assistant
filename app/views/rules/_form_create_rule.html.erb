<div class= "form-group full_screen" id="property">
  <h2 class="create-rule-section">Select Property <small>Step 2 of 4</small>
    <a id="back-portfolio" class="scroll-action back btn btn-default" role="button">Back</a>
  </h2>
  <div class="col-xs-4 center-screen">
    <%= rule_form.select(:property, options_for_select(@properties), {}, {class: "form-control"}) %>
    <span class="help-block">Select the property you want to watch.</span>
    <p class="btn btn-primary scroll-action center-btn" id="to-rel">Next Step</p>
  </div>
</div>

<div class= "form-group full_screen" id="rel">
  <h2 class="create-rule-section">Set Relationship <small>Step 3 of 4</small>
    <a id="back-property" class="scroll-action back btn btn-default" role="button">Back</a>
  </h2>
  <div class="col-xs-4 center-screen">
    <%= rule_form.select(:rel, options_for_select(@rel), {}, {class: "form-control"}) %>
    <span class="help-block">Which relationship you want to see? More than the target or less than?</span>
    <p class="btn btn-primary scroll-action center-btn" id="to-target">Next Step</p>
  </div>
</div>

<div class= "form-group full_screen" id="target">
  <h2 class="create-rule-section">Set Your Target <small>Step 4 of 4</small>
    <a href="#" id="back-rel" class="scroll-action back btn btn-default" role="button">Back</a>
  </h2>
  <div class="col-xs-4 center-screen">
      <%= rule_form.text_field :target , class: "form-control", placeholder: 'Enter a target value'%>
    <span class="help-block">Set up your target value and it's all set!</span> 
    <%= rule_form.submit 'Submit Rule', class: 'btn btn-success center-btn'%> 
  </div>
</div>            


