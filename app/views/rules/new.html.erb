

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Fill out the form to create a new rule!</h1>



      <%= flash[:notice] if flash[:notice] %>
      <%= bootstrap_form_for @rule do |rule_form| %>
        
        <div class= "form-group">
          <div class="col-md-12">
            <%= rule_form.text_field :ticker, class: 'form-group', placeholder: 'Enter stock ticker' %>
            <span class="help-block"> A unique series of letters assigned to a security for trading purposes. NYSE and AMEX listed stocks have three characters or less. Nasdaq-listed securities have four or five characters.
            </span>
          </div>
        </div>
            
            <div class= "form-group">
              <div class="col-md-12">
            <%= rule_form.select(:property, options_for_select([['Price',"last_trade_price_only"], ['Volume',"volume" ], ['Market Cap', "market_capitalization"],['Div',4], ['Yld',5], ['P/E', 6]]), {}, {class: "form-control"}) %>
          </div>
        </div>

        <div class= "form-group">
              <div class="col-md-12">
            <%= rule_form.select(:rel, options_for_select([['Up to',"up"], ['Down to',"down" ]]), {}, {class: "form-control"}) %>
            </div>
        </div>

        <div class= "form-group">
              <div class="col-md-12">
            <%= rule_form.text_field :target , class: 'form-group', placeholder: 'Enter a target value'%>
            <span class="help-block">What value do you want the indicator to be?</span> 
              </div>
        </div>
            
          <div class= "form-group">
              <div class="col-md-12">
            <%= rule_form.submit 'Submit Rule', class: 'btn btn-success'%> 
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>