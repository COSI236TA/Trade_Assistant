  <div class="row">
    <div class="col-md-4 col-md-offset-4">

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :email, 'Email' %><br />
    <%= f.text_field :email, :id => :email, class: 'form-control', placeholder: 'Enter your email' %>
  </div>
  <div class="form-group">
    <%= f.label :name, 'Name' %><br />
    <%= f.text_field :name, :id => :name, class: 'form-control', placeholder: 'Enter your name' %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'Password' %><br />
    <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
  </div>
  <div>
    <%= f.label :password_confirmation, 'Password confirmation' %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Verify your password' %>
  </div>
    <div>
    <%= f.label :notification, 'Select Notification Preference' %><br>
    <%= f.label :notification, 'email' %> 
    <%= f.radio_button :notification, 'email', :checked => (get_notification == 'email') %>
    <%= f.label :notification, 'twitter' %> 
    <%= f.radio_button :notification, 'twitter', :checked =>  (get_notification == 'twitter') %>
  </div>
  
  <center> <span class="help-block" style="background-color:#e3e3e3;">Thank you for registration.</span> </center>
  <div class="col-md-4 col-md-offset-4">
    <%= f.submit 'Sign Up', class: 'btn btn-success'%>
  </div>
<% end %>

