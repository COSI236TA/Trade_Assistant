

<div class="dashboard">
<h1>Hi, <%= get_email %></h1>

<p><a href="create_rule" class="btn btn-default">Create New Rule</a></p>

<table class="table table-hover table-bordered table-condensed"> 
  <thead>
    <th>Last Triggered</th>
    <th>Description</th>
    <th>Activated</th>
  </thead>
  <tbody>
    <% @my_rules.each do |rule| %>
    <tr>
    <td><%= rule.last_triggered %></td>
    <td><%= rule.description %></td>
    <td><%= rule.activated? %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>