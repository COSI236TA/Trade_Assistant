

<div class="dashboard">
<h1>Hi, <%= @user_email %></h1>

<p><a><%= button_to "Create New Rule", create_rule_path, :class => "btn btn-default" %></a></p>
<table class="table table-hover table-bordered table-condensed"> 
  <thead>
    <th>Last Triggered</th>
    <th>Description</th>
    <th>Activated</th>
  </thead>
  <tbody>
    <% if @my_rules != nil %>
      <% @my_rules.each do |rule| %>
      <tr>
      <td><%= rule.last_triggered %></td>
      <td><%= rule.description %></td>
      <td><%= rule.activated? %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>